<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_text_input"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/countdown_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:hint="@string/hintField"
        android:layout_toLeftOf="@id/button_set"
        android:layout_marginLeft="150dp"
        android:inputType="number"
        android:maxLength="4" />

    <Button
        android:id="@+id/button_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/countdown_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="150dp"
        android:text="@string/buttonSetText" />


    <TextView
        android:id="@+id/countdown_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textSize="30sp"
        android:layout_toRightOf="@id/countdown_button"
        android:layout_marginLeft="150dp"
        tools:text="10:00" />

    <Button
        android:id="@+id/countdown_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_set"
        android:layout_alignStart="@+id/button_set"
        android:layout_alignLeft="@+id/button_set"
        android:text="@string/buttonStartText"
        android:layout_marginRight="150dp"
        tools:text="Start" />

</RelativeLayout>